    <div class="container-fluid">
      <div class="col-md-12 py-4 mx-auto">
      <h2>Listado de Clientes</h2>
      <hr>
      <table class="table table-dark table-hover px-5">
        <thead>
          <tr>
            <th scope="col">#</th>            
            <th scope="col">Nombre</th>
            <th scope="col">Estado</th> 
            <th scope="col">Acciones</th>           
            <th scope="col">Ventas</th>           
          </tr>
        </thead>
        <tbody>
          {{#each clientes}}
          <tr id="{{this.id}}" class="tr-events">
            <th scope="row">{{this.index}}</th>            
            <td>{{this.nombre}}</td>            
              {{#if this.estado}}
                <td class="text-success font-weight-bold td-estado">Activo</td>
                <td>
                  <button class="btn btn-danger btn-update btn-sm">Desactivar</button>                  
                </td>
                <td class="td-ventas">
                  <button class="btn btn-primary btn-ventas btn-sm">Ver Ventas</button>
                </td>
              {{else}}
                <td class="text-danger font-weight-bold td-estado">Inactivo</td>
                <td><button class="btn btn-success btn-update btn-sm">Activar</button></td>
                <td class="td-ventas"></td>
              {{/if}}                                 
          </tr>
          {{/each}}
        </tbody>
      </table> 
      </div>
