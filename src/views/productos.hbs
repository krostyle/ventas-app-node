<!--Tabla de productos-->
<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
                        <h2>Productos</h2>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Cantidad</th>            
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <td>{{this.index}}</td>
                        <td>{{this.nombre}}</td>
                        <td>{{this.precio}}</td>
                        <td>{{this.cantidad}}</td>
                        <td>
                            <a href="/api/productos/edit/{{this.id}}" class="btn btn-warning btn-sm">Editar</a>
                            <button id="{{this.id}}" class="btn btn-danger btn-sm btn-eliminar">Eliminar</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <!--Agregar Producto-->
            <div class="container text-center my-3">
                <div class="col-md-12">
                    <a href="/api/productos/add/nuevoProducto/" class="btn btn-success btn-lg">Agregar Producto</a>
                </div>
        </div>
    </div>
</div>
<script type="module"src="/js/productos.js"></script>

                          
                        