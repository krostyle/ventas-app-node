<div class="container-fluid my-2">
    <!--Formulario Añadir Producto-->
    <div class="row mx-auto">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4>Añadir Producto</h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre del producto" minlength="3" required>
                        </div>
                        <div class="form-group">
                            <label for="precio">Precio</label>
                            <input type="number" class="form-control" id="precio" name="precio" placeholder="Precio del producto" minlength="1" min="0" required>
                        </div>
                        <div class="form-group">
                            <label for="descripcion">Cantidad</label>
                            <input type="number "class="form-control" id="cantidad" name="descripcion" min="0" minlength="1" placeholder="Cantidad" required></input>
                        </div>
                        <div class="contatiner text-center">
                            <button class="btn btn-primary my-2 btn-agregar">Añadir</button>
                        </div>                        
                    </form>     
                </div>      
            </div>    
        </div>
    </div>                                
</div>
    <script type="module"src="/js/addProducto.js"></script>