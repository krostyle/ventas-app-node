    <div class="container-fluid">
        <h2 class="text-center text-info">Venta # {{venta.id}} para el cliente {{cliente.nombre}}</h2>
        <div class="row">
             <div class="col-md-4 py-4">
               <h3 class="my-2">Productos</h3>
                <form action="" class="mx-auto" method="">
                    <div class="mb-3">
                      <label class="form-label">Seleccione un Producto</label>
                      <select name="producto" id="producto" class="form-control">
                        <option value="">Seleccione un producto</option>
                        {{#each productos}}
                        {{#if this.stock}}
                        <option value="{{this.precio}}" id="{{this.id}}">{{this.nombre}} </option>
                        {{else}}
                        <option value="{{this.precio}}" id="{{this.id}}" disabled>{{this.nombre}}</option>
                        {{/if}}                
                        {{/each}}
                        </select>
                    </div>              
                    <div class="mb-3">
                      <label class="form-label">Cantidad</label>
                      <input type="number" name="cantidad" id="cantidad" class="form-control" placeholder="Cantidad" min="1">
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Subtotal</label>
                      <p name="subtotal" id="subtotal">$0</p>                 
                    </div>
                    <div class="container text-center">
                    <button id="{{venta.id}}" class="btn btn-primary btn-agregar">Agregar Producto</button>
                    </div>
                </form>   
            </div>                      
            <div class="col-md-8 py-4 mx-auto">    
              <h3 class="my-2">Detalles de la venta</h3>            
                <table class="table table-striped table-bordered overflow-auto">
                    <thead>
                        <tr >
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="detalles">
                        {{#each detallesProducto}}
                        <tr>
                            <td>{{this.producto}}</td>
                            <td >{{this.cantidad}}</td>
                            <td>{{this.total}}</td>
                            <td>
                                <button class="btn btn-danger btn-eliminar" id="{{this.id}}" producto-id="{{this.producto_id}}" producto-cantidad="{{this.cantidad}}" venta-id="{{this.venta_id}}" producto-nombre="{{this.producto}}" producto-subtotal="{{this.total}}">Eliminar</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>      
            </div>             
        </div>
    </div>
   
    <div class="container-fluid">
        <div class="row">
           <!-- Descuento-->
            <div class="col-md-4 py-4">
                <h3 class="my-2">Descuento</h3>
                <form action="" class="mx-auto" method="">
                    <div class="mb-3">
                      <label class="form-label">Descuento</label>
                      <input type="number" name="descuento" id="descuentoInput" class="form-control" placeholder="Descuento" min="0" max="100">
                    </div>
                    <div class="container text-center">
                    <button id="{{venta.id}}" class="btn btn-warning btn-descuento">Aplicar Descuento</button>
                    </div>
                </form>   
            </div>  
            <!-- Total-->
            <div class="col-md-6 py-4 mx-auto">
                <h3 class="">Total Venta</h3>
                <div class="row mx-auto">
                    <div class="col-md-8">
                        <p>Subtotal</p>
                        <p>Descuento</p>
                        <p>Total</p>
                    </div>
                    <div class="col-md-4">
                        <p id="subtotalVenta" value="{{total}}">{{totalFormat}}</p>
                        <p id="descuento" value="0">$0</p>
                        <p id="total" value="{{total}}">{{totalFormat}}</p>
                    </div>
            </div>
          </div>
        </div>
    </div>
    <div class="container-fluid my-2 py-3">
        <div class="row">
            <div class="col-md-12 py-4 text-center">
                <button id="{{venta.id}}" cliente-id="{{cliente.id}}" class="btn btn-success btn-finalizar btn-lg">Finalizar/Actualizar Venta</button>
            </div>
        </div>
    </div>

  
    
    <script type="module"src="/js/detalle.js"></script>