    <div class="container-fluid">
      <div class="col-md-12 py-4 mx-auto">
      <h2>Listado de Ventas de {{cliente.nombre}}</h2>
      <hr>
      <table class="table table-dark table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>            
            <th scope="col">Fecha</th>
            <th scope="col">IVA</th> 
            <th scope="col">Descuento</th>           
            <th scope="col">Total</th>          
            <th scope="col" class="">Acciones</th> 
          </tr>
        </thead>
        <tbody>
          {{#each ventas}}
          <tr id="{{this.id}}" class="tr-events">
            <th scope="row">{{this.index}}</th>            
            <td>{{this.fecha}}</td>            
            <td>{{this.iva}}</td>
            <td>{{this.descuento}}</td>
            <td>{{this.total}}</td>
            <td>
              <button class="btn btn-danger btn-sm btn-eliminar">Eliminar</button>
              <button class="btn btn-warning btn-sm btn-editar" >Editar</button>
            </td>
              
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="container text-center my-3 py-3">
            <button id="{{cliente.id}}" n-venta="{{ventas.length}}" nombre-cliente="{{cliente.nombre}}" class="btn btn-success btn-lg btn-venta">Realizar Nueva Venta</button>
        </div>
      </div>
    </div>
   
    <script type="module"src="/js/ventas.js"></script>